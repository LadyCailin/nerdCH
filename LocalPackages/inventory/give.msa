# commandhelper.alias.give
give:/i $mat [$qty=1] = >>>
    try {
        @success = pgive_item(array(name: to_upper($mat), damage: 0, qty: $qty, meta:));
        if (@success > 0) {
            msg(color(GRAY).'Free some space in your inventory!');
        } else {
            msg(color(GRAY).'Gave '.$qty.' of '.$mat);
        }
    } catch (CastException @e) {
        msg(color(GRAY).'Usage: /i <material> [quantity]');
    }
<<<

*:/give $player $mat [$qty=1] = >>>
	_assertperm('restricted', 0);
	try {
	    @recipient = player($player);
	    @success = pgive_item(@recipient, array(name: to_upper($mat), damage: 0, qty: $qty, meta:));
        if (@success > 0) {
            msg(color(GRAY).'That player has no space in their inventory!');
        } else {
            msg(color(GRAY).'Gave '.$qty.' of '.$mat.' to '.$player);
        }
    } catch (PlayerOfflineException @e) {
        msg(color(GRAY).'That player is offline!');
    } catch (CastException @e) {
        msg(color(GRAY).'Usage: /i <material> [quantity]');
    }
<<<

# commandhelper.alias.give
give:'/give-that' = >>>
	if (get_block(pcursor()) == 'AIR') {
		die('No block in sight!')
	} else {
		call_alias('/i '.to_upper(get_block(pcursor())))
	}
<<<
